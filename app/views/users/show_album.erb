<div class="container">
  <%= link_to I18n.t('.back_to_user'), (@user.user_name.present? ? user_path(@user.user_name) : user_path(@user.id)) %>
  <div class="row">
    <% @photos.each do |photo| %>
      <div class="photo">
        <%= link_to image_tag(photo.image_url(:thumb_150).to_s), photo.image_url.to_s, data: { fancybox: "photo", caption: (render 'photos/caption', photo: photo, from_album: false) } %>
      </div>
    <% end %>
  </div>
  <%= paginate @photos %>
</div>
