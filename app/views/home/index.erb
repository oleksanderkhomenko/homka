<% if current_user && @feed %>
  <div class="container">
    <div class="my-3 p-3 bg-white rounded box-shadow">
      <h6 class="border-bottom border-gray pb-2 mb-0">Updates:</h6>
      <% @feed.each do |key, value| %>
        <div class="media text-muted pt-3">
          <div class="media-body pb-3 mb-0 small lh-125 border-bottom border-gray">
            <div class="d-flex justify-content-between align-items-center w-100">
              <strong class="text-gray-dark"><%= value.first.user.full_name %> added <%= value.count %> photos to <%= value.first.album.name %> | <%= key.first %></strong>
            </div>
            <% if value.first.user.user_name.present? %>
              <span class="d-block">@<%= value.first.user.user_name %></span>
            <% end %>
            <div class="row">
              <% value.each do |photo| %>
                <%= link_to image_tag(photo.image_url(:thumb_150).to_s), photo.image_url.to_s, data: { fancybox: key.first, caption: (render 'photos/caption', photo: photo, album: photo.album, from_album: true) } %>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
<% end %>
