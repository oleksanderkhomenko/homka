<!DOCTYPE html>
<html>
  <head>
    <title>Homka</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="main">
      <div class="header">
        <%= render 'layouts/header'  %>
      </div>
      <div class="content">
        <p class="notice m-0 p-0"><%= notice %></p>
        <%= yield %>
      </div>
    </div>
  </body>
</html>
