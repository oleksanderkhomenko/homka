<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
  <%= link_to I18n.t('.home'), root_path, class: 'navbar-brand' %>
  <div class="collapse navbar-collapse" id="navbarNavDropdown">
    <ul class="navbar-nav w-100">
      <% if current_user %>
        <li class="nav-item">
          <%= link_to I18n.t('.albums'), albums_path, class: "nav-link #{'active' if current_page?(albums_path)}"  %>
        </li>
        <li class="nav-item">
          <%= link_to I18n.t('.photos'), photos_path, class: "nav-link #{'active' if current_page?(photos_path)}"  %>
        </li>
        <li class="nav-item">
          <%= link_to I18n.t('.subscriptions'), idols_path, class: "nav-link #{'active' if current_page?(idols_path)}"  %>
        </li>
        <li class="nav-item">
          <%= link_to I18n.t('.followers'), followers_path, class: "nav-link #{'active' if current_page?(followers_path)}"  %>
        </li>
        <li class="nav-item mx-auto">
          <%= render 'layouts/search_form' %>
        </li>
        <li class="nav-item dropdown">
          <a class="nav-link dropdown-toggle" href="#" id="languageDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            <%= I18n.t('.language') %>
          </a>
          <div class="dropdown-menu" aria-labelledby="languageDropdownMenuLink">
            <%= link_to 'EN', change_locale_path(:en), method: :patch, remote: true, class: "dropdown-item #{'active' if I18n.locale == :en}" %>
            <%= link_to 'UA', change_locale_path(:uk), method: :patch, remote: true, class: "dropdown-item #{'active' if I18n.locale == :uk}" %>
          </div>
        </li>
        <li class="nav-item dropdown">
          <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            Logged as <%= current_user.full_name %>
          </a>
          <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
            <%= link_to I18n.t('.profile'), edit_user_registration_path, class: "dropdown-item" %>
            <%= link_to I18n.t('.log_out'), destroy_user_session_path, method: :delete, class: 'dropdown-item' %>
          </div>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to I18n.t('.log_in'), new_user_session_path, class: "nav-link #{('active' if current_page?(new_user_session_path))}" %>
        </li>
        <li class="nav-item">
          <%= link_to I18n.t('.sign_up'), new_user_registration_path, class: "nav-link #{('active' if current_page?(new_user_registration_path))}" %>
        </li>
        <li class="nav-item mx-auto">
          <%= render 'layouts/search_form' %>
        </li>
        <li class="nav-item dropdown">
          <a class="nav-link dropdown-toggle" href="#" id="languageDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            <%= I18n.t('.language') %>
          </a>
          <div class="dropdown-menu" aria-labelledby="languageDropdownMenuLink">
            <%= link_to 'EN', change_locale_path(:en), method: :patch, remote: true, class: "dropdown-item #{'active' if I18n.locale == :en}" %>
            <%= link_to 'UA', change_locale_path(:uk), method: :patch, remote: true, class: "dropdown-item #{'active' if I18n.locale == :uk}" %>
          </div>
        </li>
      <% end %>
    </ul>

  </div>
</nav>
