<% if from_album %>
  <div class="photo" id="<%= photo.id %>">
    <%= link_to image_tag(photo.image_url(:thumb_150).to_s), photo.image_url.to_s, data: { fancybox: "photo", caption: (render 'caption', photo: photo, album: @album) } %>
    <span><%= link_to (fa_icon 'trash', class: 'text-danger'), album_photo_path((@album.present? ? @album : album.id), photo), method: :delete, remote: true %> </span>
  </div>
<% else %>
  <div class="photo" id="<%= photo.id %>">
    <%= link_to image_tag(photo.image_url(:thumb_150).to_s), photo.image_url.to_s, data: { fancybox: "photo", caption: (render 'caption', photo: photo) } %>
    <span><%= link_to (fa_icon 'trash', class: 'text-danger'), photo_path(photo), method: :delete, remote: true %> </span>
  </div>
<% end %>
