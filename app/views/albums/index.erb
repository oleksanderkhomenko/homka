<div class="container h-100">
  <%= link_to (fa_icon 'plus-circle', class: 'fa-5x text-success create-new-album'), new_album_path %>


  <div class="albums row pt-3">
    <% @albums.each do |album| %>
      <div class="album col-md-2">
        <div class="card mb-2 box-shadow align-items-center">
          <a href="<%= album_path(album) %>" class="d-flex flex-column w-100 text-center">
            <%= fa_icon 'folder-open', class: 'fa-5x text-success' %>
            <span data-toggle="tooltip" data-placement="top" title="<%= album.name %>"><%= album.name %></span>
          </a>
        </div>
      </div>
    <% end %>
  </div>
</div>
